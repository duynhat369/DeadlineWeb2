<div class="mt-4 mb-4">
  <div class="container">
    <h2 class="title-header mt-4 mb-4">{{title}}</h2>
    <div class="row justify-content-center">
      <div class="col col-sm-12 col-md-9 col-lg-6">
        <form method="POST">
          <div class="form-group">
            <label for="inputTodoName">Tên công việc</label>
            <input name="inputTodoName" type="text" class="form-control" id="inputTodoName"
              aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="inputTodoDescriptions">Ghi chú cho công việc</label>
            <textarea name="inputTodoDescriptions" class="form-control" id="inputTodoDescriptions"></textarea>
          </div>
          <button type="submit" class="btn button-color">Thêm</button>
        </form>
      </div>
    </div>
  </div>
</div>